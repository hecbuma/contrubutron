%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{:content => "width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no", :name => "viewport"}/
    %title Contributron
    = stylesheet_link_tag    'application', media: 'all'
    = stylesheet_link_tag    'vendor', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags

    = favicon_link_tag 'contributron-logo.ico'
    :javascript
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-69835898-1', 'auto');
      ga('send', 'pageview');
  %body.hold-transition.skin-purple.sidebar-mini
    .wrapper
      = render partial: 'elements/top_nav'
      = render partial: 'elements/side_bar'
      / Content Wrapper. Contains page content
      .content-wrapper
        = render partial: 'elements/flash_messages'
        / Content Header (Page header)
        %section.content-header
          %h1
            = yield :page_title
            %small= yield :page_subtitle

        / Main content
        %section.content
          = yield

    %footer.main-footer
      .pull-right.hidden-xs
        %b Version
        1.0.0
      Made with lot's of beer and RedBull.
      \Â©
      = link_to 'Hecbuma', 'http://hecbuma.herokuapp.com', target: '_blank'

    :javascript
      var rumbleBannerBackgroundColor, rumbleBannerTextColor, rumbleBannerLinkColor, rumbleBannerPlacement;
      rumbleBannerBackgroundColor = "#161616";
      rumbleBannerTextColor = "#b0b0b0";
      rumbleBannerLinkColor = "#ffffff";
      rumbleBannerPlacement = "bottom"; // Optionally replace with "bottom".
