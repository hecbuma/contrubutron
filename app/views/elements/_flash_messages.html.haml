  - if msg.is_a?(String)
    - name = "success" if name == "notice"
    - name = "danger" if name == "alert"
    %div{:class => "alert alert-#{name} alert-dismissible"}
      %button.close{"aria-hidden" => "true", "data-dismiss" => "alert", :type => "button"} Ã—
      %h4
        %i.icon.fa.fa-info
        = "#{name.capitalize}!"
